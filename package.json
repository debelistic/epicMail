{
  "name": "epicmail",
  "version": "1.0.0",
  "description": "A wep app to share messages over the internet",
  "main": "server/app.js",
  "scripts": {
    "test": "set NODE_ENV=test && mocha --require @babel/register test/*.js --exit && npm run rollback",
    "devstart": "set NODE_ENV=production && npm run migrate && nodemon --exec babel-node server/app.js",
    "start": "set NODE_ENV=production && npm run migrate && node server/bin/dev",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir dist && babel server -s -d dist",
    "production": "npm run build && node server/bin/production",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "migrate": "babel-node db createAllTables --verbose",
    "rollback": "babel-node db dropAllTables"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debelistic/epicMail.git"
  },
  "author": "Victor Awotidebe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/debelistic/epicMail/issues"
  },
  "homepage": "https://github.com/debelistic/epicMail#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "codecov": "^3.2.0",
    "coveralls": "^3.0.3",
    "dummy-data": "0.0.8",
    "eslint": "^5.15.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "@babel/register": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "make-runnable": "^1.3.6",
    "mocha": "^6.0.2",
    "multer": "^1.4.1",
    "nyc": "^13.3.0",
    "pg": "^7.8.2",
    "swagger-ui-express": "^4.0.2",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": "11.10.1",
    "npm": "6.7.0"
  }
}
